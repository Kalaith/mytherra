{
    "name": "mytherra/php-backend",
    "description": "PHP backend for Mytherra game",
    "type": "project",
    "require": {
        "php": "^8.1",
        "illuminate/database": "^10.0",
        "vlucas/phpdotenv": "^5.0",
        "ramsey/uuid": "^4.0",
        "monolog/monolog": "^3.0",
        "illuminate/queue": "^10.48",
        "php-di/php-di": "^7.0",
        "firebase/php-jwt": "^6.11",
        "respect/validation": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:5002 -t public",
        "test": "phpunit",
        "test:setup": "@php -r \"file_exists('tests/.env.testing') || copy('tests/.env.testing.example', 'tests/.env.testing');\"",
        "test:init": [
            "@test:setup",
            "@php -r \"@mkdir('storage/test', 0777, true);\"",
            "phpunit"
        ],
        "cs-check": "phpcs --standard=PSR12 src/ tests/",
        "cs-fix": "phpcbf --standard=PSR12 src/ tests/"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": false
        }
    }
}
